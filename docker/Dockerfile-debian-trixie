FROM debian:trixie

LABEL org.opencontainers.image.authors="Stanislav Lechev (LZ2SLL) <af@0xAF.org>"
LABEL org.opencontainers.image.source="https://github.com/0xAF/openwebrxplus-deb-builder"
LABEL org.opencontainers.image.title="DEB packages builder for OpenWebRX+ and its dependencies"
LABEL org.opencontainers.image.description="Builder image for OpenWebRX+ DEB packages."
LABEL org.opencontainers.image.vendor="OpenWebRX+"

ENV EMAIL=af@0xAF.org
ENV FULLNAME="DEB packages builder for OpenWebRX+ and its dependencies"
ENV VERSION=0.1

# This is needed to ensure package installs don't prompt for any user input.
ENV DEBIAN_FRONTEND=noninteractive

COPY docker/entrypoint.sh /entrypoint.sh
COPY docker/build.sh /build.sh
COPY lib/log.sh /log.sh

RUN echo "deb http://deb.debian.org/debian trixie main contrib non-free non-free-firmware" > /etc/apt/sources.list && \
    echo "deb http://deb.debian.org/debian-security trixie-security main contrib non-free non-free-firmware" >> /etc/apt/sources.list && \
    echo "deb http://deb.debian.org/debian trixie-updates main contrib non-free non-free-firmware" >> /etc/apt/sources.list && \
    rm -f /etc/apt/sources.list.d/debian.sources

RUN \
  apt-get update && \
  apt-get upgrade -y && \
  apt-get install -y --no-install-recommends \
      vim-tiny \
      sudo \
      autoconf \
      autoconf-archive \
      autogen \
      automake \
      build-essential \
      ca-certificates \
      cmake \
      curl \
      dh-autoreconf \
      dh-make \
      dpkg-dev \
      g++ \
      gcc \
      git-buildpackage \
      git-core \
      make \
      pkg-config \
      protobuf-compiler \
      wget \
      libfftw3-dev \
      libsamplerate0-dev \
      python3-all \
      libpython3-dev \
      python3-setuptools \
      dh-python \
      librtlsdr-dev \
      libsoapysdr-dev \
      libprotobuf-dev \
      libudev-dev \
      libicu-dev \
      libsndfile1-dev \
      libliquid-dev \
      ninja-build \
      libxml2-dev \
      libjansson-dev \
      adduser \
      libc-bin \
      \
      # Qt5 (minimal for console mode)
      qt5-qmake \
      qtbase5-dev \
      \
      # Audio libraries (FDK-AAC from non-free)
      libfdk-aac-dev \
      libfdk-aac2t64 \
      libfaad-dev \
      libopus-dev \
      \
      # Signal processing
      libfftw3-dev \
      libspeex-dev \
      libspeexdsp-dev \
      libsamplerate0-dev \
      \
      # Audio output
      libpulse-dev \
      pulseaudio \
      libasound2-dev \
      \
      # Hardware support
      libhamlib-dev \
      libusb-1.0-0-dev \
      libgps-dev \
      \
      # Network capture
      libpcap-dev \
      \
      # Utilities
      file \
  && \
  apt-get clean && \
  rm -rf /var/lib/apt/lists/* && \
  chmod +x /entrypoint.sh /build.sh && \
  cd /


ENTRYPOINT ["/entrypoint.sh"]
CMD ["/build.sh"]
